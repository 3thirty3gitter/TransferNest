rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'admin@transfernest.com' ||
        request.auth.token.email == 'trent@3thirty3.ca' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders, admins can read all
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // Only admins can write/update orders
      allow create: if isAdmin();
      allow update, delete: if isAdmin();
    }
    
    // Cart collection (if you add cart persistence)
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }
    
    // Analytics/telemetry (write-only for clients)
    match /analytics/{document=**} {
      allow read: if isAdmin();
      allow write: if request.auth != null;
    }
    
    // Settings collection (public read, admin write)
    match /settings/{settingId} {
      allow read: if true; // Public can read settings
      allow write: if isAdmin(); // Only admins can write
    }
    
    // Default deny for all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}